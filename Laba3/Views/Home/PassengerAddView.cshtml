@model Laba3.Dal.Entities.Passenger
@{
    ViewBag.Title = "Please add new passenger to service list!";
}

<script>

    function uuidv4() {
        return ([1e7] + -1e3 + -4e3 + -8e3 + -1e11).replace(/[018]/g, c =>
            (c ^ crypto.getRandomValues(new Uint8Array(1))[0] & 15 >> c / 4).toString(16)
        );
    }
    function getRandom() {
        document.getElementById('randomid').value = uuidv4();
    }
</script>

<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Id" class="control-label">Click on input to generate passenger id</label>
        <input type="text" asp-for="Id" class="form-control" id="randomid" readonly onclick="getRandom()"/>
    </div>
    <div class="form-group">
        <label asp-for="First_Name" class="control-label">Passenger Firstname</label>
        <input type="text" asp-for="First_Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Last_Name" class="control-label">Passenger Lastname</label>
        <input type="text" asp-for="Last_Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Passport_Number" class="control-label">Passenger Passport</label>
        <input type="text" asp-for="Passport_Number" class="form-control" required/>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-outline-primary"/>
    </div>
</form>


